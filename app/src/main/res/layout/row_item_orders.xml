<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:paddingTop="5dp"
        android:padding="10dp"
        android:background="@color/colorDashboardBackground"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvDateDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp" />

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEB,19"
            android:textColor="@color/grey"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/ll"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:layout_alignBottom="@+id/ll"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvOrderDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/ivClick"
            android:text="CG Automation and Fixedfsdhkfhdf"
            android:textColor="@color/black"

            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tvOrderIteam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 item"
            android:layout_below="@+id/tvOrderDescription"
            android:textColor="@color/grey" />
        <ImageView
            android:id="@+id/ivClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/circle_blue"/>
    </RelativeLayout>
    <View
        android:id="@+id/viewColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        android:layout_below="@+id/rl"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>